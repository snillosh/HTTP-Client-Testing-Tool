<Window
    x:Class="HTTPClientTestingTool.UI.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HTTPClientTestingTool.UI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="{Binding Title}"
    Width="800"
    Height="500"
    MinWidth="800"
    MinHeight="500"
    Background="Gray"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" LastChildFill="False">

            <TextBlock FontSize="36" Text="{Binding Title}" />

            <Button
                Margin="5"
                Padding="5"
                Command="{Binding SettingsButtonCommand}"
                Content="{Binding SettingsButtonContent}"
                DockPanel.Dock="Right" />
        </DockPanel>

        <ContentControl Grid.Row="1" Content="{Binding UpperContent}" />

        <ContentControl Grid.Row="2" Content="{Binding LowerContent}" />

    </Grid>
</Window>
